{% extends 'JeanDeJeanPortfolioBundle::admin.html.twig' %}
{% block title %}Page{% endblock %}
{% block body %}
<div class="block">
    <div class="navbar navbar-inner block-header">
        <div class="muted pull-left">Page</div>
    </div>
    <div class="block-content collapse in">
        <div class="span12">
            <form class="form-horizontal" action="{% if page.getId() %}{{ path('admin_edit_page', {'id':page.getId()}) }}{% endif %}" method="post" {{ form_enctype(form) }}>
                <fieldset>
                <legend>Edit page</legend>
                <div class="control-group">
                {{ form_errors(form.name) }}
                {{ form_label(form.name, label|default(null), { 'label_attr': { 'class': 'control-label' } }) }}
                    <div class="controls">
                        {{ form_widget(form.name, {'attr': {'class' : 'input-xlarge'} }) }}
                    </div>
                </div>
                <div class="control-group">
                {{ form_errors(form.content) }}
                {{ form_label(form.content, label|default(null), { 'label_attr': { 'class': 'control-label' } }) }}
                    <div class="controls">
                        {{ form_widget(form.content, {'attr': {'class' : 'input-xlarge'} }) }}
                    </div>
                </div>
                <div class="control-group">
                {{ form_errors(form.video) }}
                {{ form_label(form.video, label|default(null), { 'label_attr': { 'class': 'control-label' } }) }}
                    <div class="controls">
                        {{ form_widget(form.video, {'attr': {'class' : 'input-xlarge'} }) }}
                    </div>
                </div>

                {{ form_rest(form) }}
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    <button type="reset" class="btn">Cancel</button>
                </div>
                </fieldset>
            </form>    
        </div>    
    </div>
</div>
{% endblock %}