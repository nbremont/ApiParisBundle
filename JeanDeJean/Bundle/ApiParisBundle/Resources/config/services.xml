    <parameters>
        <parameter key="cache.class">Doctrine\Common\Cache\ApcCache</parameter>
        <parameter key="jean_de_jean_api_paris_uri">https://api.paris.fr:3000/data/</parameter>
        <parameter key="jean_de_jean_api_paris.api.client.class">JeanDeJean\Component\ApiParis\ApiClient</parameter>
        <parameter key="jean_de_jean_api_paris.api.equipements.class">JeanDeJean\Component\ApiParis\ApiEquipements</parameter>
        <parameter key="jean_de_jean_api_paris.api.quefaire.class">JeanDeJean\Component\ApiParis\ApiQueFaire</parameter>
    </parameters>
    
    <services>
        <service id="cache" class="%cache.class%"></service>
        <service id="jean_de_jean_api_paris.api.client" class="%jean_de_jean_api_paris.api.client.class%">
            <argument>%jean_de_jean_api_paris_uri%</argument>
            <argument>%jean_de_jean_api_paris_token%</argument>
            <argument type="service" id="logger" />
            <argument>true</argument>
        </service>
        <service id="jean_de_jean_api_paris.api.quefaire" class="%jean_de_jean_api_paris.api.quefaire.class%">
            <argument type="service" id="jean_de_jean_api_paris.api.client" />
        </service>
        <service id="jean_de_jean_api_paris.api.equipements" class="%jean_de_jean_api_paris.api.equipements.class%">
            <argument type="service" id="jean_de_jean_api_paris.api.client" />
        </service>
    </services>
</container>
